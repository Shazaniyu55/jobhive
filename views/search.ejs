    <style>
      #popup-form label {
  font-size: 1rem;
  color: #333;
  margin-bottom: 5px;
  display: block;
  text-align: left;
}
      /* Popup styling */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-content {
  background: white;
  padding: 20px;
  border-radius: 5px;
  width: 90%;
  max-width: 400px;
  text-align: center;
  position: relative;
}

.popup-close {
  position: absolute;
  top: 10px;
  right: 10px;
  cursor: pointer;
  font-size: 1.5rem;
  color: #333;
}

.popup-content h2 {
  margin-bottom: 20px;
  font-size: 1.5rem;
}

.popup-content p {
  margin-bottom: 20px;
  font-size: 1rem;
  color: #555;
}

#popup-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

#popup-form input[type="text"] {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
}


#popup-form input[type="email"] {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
}

#popup-form input[type="file"] {
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
}

#popup-form button {
  padding: 10px;
  border: none;
  border-radius: 5px;
  background-color: #007bff;
  color: white;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#popup-form button:hover {
  background-color: #0056b3;
}

    </style>
</head>
<body>

  <nav>
    <div class="nav__header">
      <div class="nav__logo">
        <a href="#" class="logo">Job<span>Hive</span></a>
      </div>
      <div class="nav__menu__btn" id="menu-btn">
        <i class="ri-menu-line"></i>
      </div>
    </div>
    <ul class="nav__links" id="nav-links">
