   <!-- Popup HTML -->
<div id="popup" class="popup" style="display: none;">
  <div class="popup-content">
    <span class="popup-close">&times;</span>
    <h2>Apply for Job</h2>
    <p id="popup-job-title"></p>
    <form id="popup-form" action="https://jobhive-inky.vercel.app/api/auth/applyjob" method="post" enctype="multipart/form-data">
      <input type="hidden" id="popup-job-id" name="jobId">
      <input type="hidden" id="popup-job-title-hidden" name="jobTitle">
      
      <!-- User ID Label and Input -->
      <label for="popup-fullname">Full Name:</label>
      <input type="text" id="popup-fullname" name="fullname" placeholder="Enter your Full Name" required>
      
      <!-- Experience Label and Input -->
      <label for="popup-experience">Years of Experience:</label>
      <input type="text" id="popup-experience" name="experience" placeholder="Years of experience" required>

      <!-- Email Label and Input -->
      <label for="popup-email">Email:</label>
      <input type="email" id="popup-email" name="email" placeholder="Email" required>

      <!-- File Upload Label and Input -->
      <label for="popup-file">Upload Resume:</label>
      <input type="file" id="popup-file" name="image" required>

      <!-- Submit Button -->
      <button type="submit" class="btn">Submit Application</button>
    </form>
  </div>
</div>



 <!-- popup -->
 <script>
          document.addEventListener('DOMContentLoaded', function() {
    const popup = document.getElementById('popup');
    const popupClose = document.querySelector('.popup-close');
    const popupJobTitle = document.getElementById('popup-job-title');
    const popupJobId = document.getElementById('popup-job-id');
    const popupJobTitleHidden = document.getElementById('popup-job-title-hidden');

    // Function to open the popup
    function openPopup(jobTitle, jobId) {
        popupJobTitle.textContent = jobTitle;
        popupJobId.value = jobId;
        popupJobTitleHidden.value = jobTitle;
        popup.style.display = 'flex';
    }

    // Function to close the popup
    function closePopup() {
        popup.style.display = 'none';
    }

    // Add event listener to all Apply buttons
    document.querySelectorAll('.dresult .apply-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            // Fetch job details from data attributes
            const jobElement = this.closest('.dresult');
            const jobTitle = jobElement.getAttribute('data-job-title');
            const jobId = jobElement.getAttribute('data-job-id');

            // Open the popup with the job title and job id
            openPopup(jobTitle, jobId);
        });
    });

    // Add event listener to close button
    popupClose.addEventListener('click', closePopup);

    // Optionally, close popup if clicking outside of popup content
    window.addEventListener('click', function(event) {
        if (event.target === popup) {
            closePopup();
        }
    });
});


</script>

