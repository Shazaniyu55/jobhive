      <form action="https://jobhive-inky.vercel.app/api/auth/search" method="post">
        <div class="search-container">

     <input type="text" name="title" id="title" placeholder="Search Job Type" class="search-input">
     <button type="submit" class="search-btn">
       <svg xmlns="http://www.w3.org/2000/svg" class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
     </button>
   </div>
   </form>
     
      
       
    </ul>
  </nav>


  
  <div class="categories">

    <div class="results">
      <p class="resup" id="message">Job Search Results</p>
      <abbr title="What would you like to know"><i class="fa-solid fa-info"></i></abbr>
  
  
      <% if (result.length === 0) { %>
        <p style="text-align: center;">No jobs Posted yet.</p>
      <% } else { %>
        <% result.forEach(jobs => { %>

  
      <div class="dresult" data-job-id="<%= jobs.id %>" data-admin-email="<%= jobs.id %>" data-job-title="<%= jobs.title %>"  data-posted-by="<%= jobs.postedBy %>">
          <div class="star">
              <i class="fa-solid fa-star"></i>
              <p id="feat">Featured</p>
          </div>
  
          <div class="timee">
            <p id="time"><%= jobs.createdAt.toDateString() %></p>
        </div>

          <div class="two-pp">
              <p id="topic"><%= jobs.title %></p>
          </div>
  
        
  
          <div class="more-pps">
              <p id="re">100% <%= jobs.jobtype %></p>
              <p id="timee"><%= jobs.jobtype %></p>
              <p id="amount"><span id="pay"><%= jobs.hourlyrate %></span><span id="currency">USD</span> <span id="duration">Hourly</span></p>
          </div>
  
          <div class="where">
              <i class="fa fa-location-dot"></i>
              <p id="wf"><%= jobs.state %></p>
          </div>
  
          <div class="talk">
              <p id="talkp"><%= jobs.description %></p>
          </div>
  
          <div class="profile">
