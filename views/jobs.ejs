    <script>
        document.addEventListener('DOMContentLoaded', function() {
  const popup = document.getElementById('popup');
  const popupClose = document.querySelector('.popup-close');
  const popupJobTitle = document.getElementById('popup-job-title');
  const popupJobId = document.getElementById('popup-job-id');
  const popupJobTitleHidden = document.getElementById('popup-job-title-hidden');
  
  // Function to open the popup
  function openPopup(jobTitle, jobId) {
    popupJobTitle.textContent = jobTitle;
    popupJobId.value = jobId;
    popupJobTitleHidden.value = jobTitle;
    popup.style.display = 'flex';
  }

  // Function to close the popup
  function closePopup() {
    popup.style.display = 'none';
  }

  // Add event listener to all Apply buttons
  document.querySelectorAll('.steps__card .btn').forEach(button => {
    button.addEventListener('click', function(event) {
      event.preventDefault();
      const jobTitle = this.closest('.steps__card').querySelector('h4').textContent;
      const jobId = this.closest('form').querySelector('input[name="userId"]').value;

      // Replace this with the actual userId if available
      const userId = 'yourUserId'; 

      openPopup(jobTitle, jobId);
    });
  });

  // Add event listener to close button
  popupClose.addEventListener('click', closePopup);

  // Optionally, close popup if clicking outside of popup content
  window.addEventListener('click', function(event) {
    if (event.target === popup) {
      closePopup();
    }
  });
});
 

    </script>

