  border-radius: 5px;
  font-size: 1rem;
}

#popup-form button {
  padding: 10px;
  border: none;
  border-radius: 5px;
  background-color: #007bff;
  color: white;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#popup-form button:hover {
  background-color: #0056b3;
}

