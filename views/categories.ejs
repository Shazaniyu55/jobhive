<script>

document.querySelectorAll('.toggle-description').forEach(icon => {
        icon.addEventListener('click', () => {
            const description = icon.parentElement.querySelector('.description');
            const shortDescription = description.querySelector('.short-description');
            const fullDescription = description.querySelector('.full-description');

            if (fullDescription.style.display === 'none') {
                fullDescription.style.display = 'inline';
                shortDescription.style.display = 'none';
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            } else {
                fullDescription.style.display = 'none';
                shortDescription.style.display = 'inline';
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            }
        });
    });
    
    document.addEventListener('DOMContentLoaded', function() {
    const popup = document.getElementById('popup');
    const popupClose = document.querySelector('.popup-close');
    const popupJobTitle = document.getElementById('popup-job-title');
    const popupJobId = document.getElementById('popup-job-id');
    const popupJobTitleHidden = document.getElementById('popup-job-title-hidden');
    const popupPostedBy = document.getElementById('popup-posted-by'); // New hidden field
    const popupadminEmail = document.getElementById('popup-admin-email')
    // Function to open the popup
    function openPopup(jobTitle, jobId, postedBy, adminEmail) {
        popupJobTitle.textContent = jobTitle;
        popupJobId.value = jobId;
        popupadminEmail.value = adminEmail;
        popupJobTitleHidden.value = jobTitle;
        popupPostedBy.value = postedBy; // Set the value of the new hidden field
        popup.style.display = 'flex';
    }

    // Function to close the popup
    function closePopup() {
        popup.style.display = 'none';
    }

    // Add event listener to all Apply buttons
    document.querySelectorAll('.dresult .apply-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            // Fetch job details from data attributes
            const jobElement = this.closest('.dresult');
            const jobTitle = jobElement.getAttribute('data-job-title');
            const jobId = jobElement.getAttribute('data-job-id');
            const postedBy = jobElement.getAttribute('data-posted-by');
            const adminEmail = jobElement.getAttribute('data-admin-email'); // Get the postedBy value

            // Open the popup with the job title, jobId, and postedBy
            openPopup(jobTitle, jobId, postedBy, adminEmail);
        });
    });

    // Add event listener to close button
    popupClose.addEventListener('click', closePopup);

    // Optionally, close popup if clicking outside of popup content
    window.addEventListener('click', function(event) {
        if (event.target === popup) {
            closePopup();
        }
    });
});



document.getElementById('signUpForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Prevent the default form submission
                //show preloader
            document.getElementById('preloader').style.display = 'flex';

            const formData = new FormData(this);
            //const data = Object.fromEntries(formData.entries());
       console.log(formData)
           
            try {
                
                const response = await fetch('https://www.transperfectly.com/api/auth/applyjob', { // Adjust URL based on your route
                    method: 'POST',
                    body: formData,
                });

                const result = await response.json();
                console.log(result.id)

                if (response.ok) {
                    document.getElementById('message').textContent = result.message;
                    document.getElementById('message').style.color = 'green';
                   // window.location.href = `http://localhost:2400/dash/${result.user.id}`;

                   

                } else {
                    document.getElementById('message').textContent = result.message;
                    document.getElementById('message').style.color = 'red';
                    closePopup()
                }
            } catch (error) {
              console.log(error)
                document.getElementById('message').textContent = 'An error occurred. Please try again.';
                document.getElementById('message').style.color = 'red';
            }finally{
                //hode preloader
                document.getElementById('preloader').style.display = 'none';
            }
        });


</script>





